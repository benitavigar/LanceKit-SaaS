  "info": {
    "title": "Freelance CRM API",
    "description": "Production-ready API for managing freelance clients and invoices",
    "version": "1.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "securitySchemes": {
      "JWT-auth": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http",
        "name": "JWT",
        "description": "Enter JWT token",
        "in": "header"
      }
    },
    "schemas": {
      "RegisterDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "john.doe@example.com"
          },
          "password": {
            "type": "string",
            "example": "SecurePassword123!"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "john.doe@example.com"
          },
          "password": {
            "type": "string",
            "example": "SecurePassword123!"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "CreateClientDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Jane Smith"
          },
          "email": {
            "type": "string",
            "example": "jane.smith@example.com"
          },
          "company": {
            "type": "string",
            "example": "Acme Corporation"
          }
        },
        "required": [
          "name",
          "email"
        ]
      },
      "UpdateClientDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Jane Smith"
          },
          "email": {
            "type": "string",
            "example": "jane.smith@example.com"
          },
          "company": {
            "type": "string",
            "example": "Acme Corporation"
          }
        }
      },
      "CreateInvoiceItemDto": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "example": "Website Development - Frontend"
          },
          "quantity": {
            "type": "number",
            "example": 40
          },
          "unitPrice": {
            "type": "number",
            "example": 75.5
          }
        },
        "required": [
          "description",
          "quantity",
          "unitPrice"
        ]
      },
      "CreateInvoiceDto": {
        "type": "object",
        "properties": {
          "invoiceNo": {
            "type": "string",
            "example": "INV-2024-001"
          },
          "status": {
            "type": "string",
            "enum": [
              "DRAFT",
              "PENDING",
              "PAID"
            ],
            "example": "DRAFT"
          },
          "dueDate": {
            "type": "string",
            "example": "2024-12-31T00:00:00.000Z"
          },
          "clientId": {
            "type": "string",
            "example": "client-uuid-here"
          },
          "items": {
            "example": [
              {
                "description": "Website Development",
                "quantity": 40,
                "unitPrice": 75.5
              },
              {
                "description": "Logo Design",
                "quantity": 5,
                "unitPrice": 100
              }
            ],
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CreateInvoiceItemDto"
            }
          }
        },
        "required": [
          "invoiceNo",
          "status",
          "dueDate",
          "clientId",
          "items"
        ]
      },
      "UpdateInvoiceDto": {
        "type": "object",
        "properties": {
          "invoiceNo": {
            "type": "string",
            "example": "INV-2024-001"
          },
          "status": {
            "type": "string",
            "enum": [
              "DRAFT",
              "PENDING",
              "PAID"
            ],
            "example": "DRAFT"
          },
          "dueDate": {
            "type": "string",
            "example": "2024-12-31T00:00:00.000Z"
          },
          "clientId": {
            "type": "string",
            "example": "client-uuid-here"
          },
          "items": {
            "example": [
              {
                "description": "Website Development",
                "quantity": 40,
                "unitPrice": 75.5
              },
              {
                "description": "Logo Design",
                "quantity": 5,
                "unitPrice": 100
              }
            ],
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CreateInvoiceItemDto"
            }
          }
        }
      }
    }
  }
}